%namespace GPLexTutorial

digit [0-9]
letter [a-zA-Z]
point [.]

%%

if                           { return (int)Tokens.IF; }
else                         { return (int)Tokens.ELSE; }
int                          { return (int)Tokens.INT; }
bool                         { return (int)Tokens.BOOL; }

{letter}({letter}|{digit})*  { yylval.name = yytext; return (int)Tokens.IDENT; }
{digit}+	                 { yylval.num = int.Parse(yytext); return (int)Tokens.NUMBER; }
{digit}*[.]({digit})+[f]*	     { yylval.floatValue =  yytest.EndsWith(["f","F","d","D"]) ? float.Parse(yytext..Remove(yytext.Length-2)) : float.Parse(yytext); return (int)Tokens.FLOAT; }
